<script>
  // Script para resaltar la secci√≥n activa en la navegaci√≥n
  document.addEventListener('DOMContentLoaded', () => {
    const sections = document.querySelectorAll('section[id]');
    const navLinks = document.querySelectorAll('header nav a');

    function highlightActiveSection() {
      let scrollPosition = window.scrollY;

      // A√±adir un offset para considerar la altura del header
      const headerHeight = document.querySelector('header')?.offsetHeight || 0;
      scrollPosition += headerHeight + 50; // A√±adir margen adicional

      // Encontrar la secci√≥n actual
      sections.forEach(section => {
        const sectionTop = section.offsetTop;
        const sectionHeight = section.offsetHeight;
        const sectionId = section.getAttribute('id');

        if (scrollPosition >= sectionTop && scrollPosition < sectionTop + sectionHeight) {
          // Quitar clase activa de todos los enlaces
          navLinks.forEach(link => {
            link.classList.remove('text-primary', 'font-semibold');
          });

          // A√±adir clase activa al enlace correspondiente
          const activeLink = document.querySelector(`header nav a[href="#${sectionId}"]`);
          if (activeLink) {
            activeLink.classList.add('text-primary', 'font-semibold');
          }
        }
      });
    }

    // Ejecutar al cargar la p√°gina
    highlightActiveSection();

    // Ejecutar al hacer scroll
    window.addEventListener('scroll', highlightActiveSection);
  });
</script>
