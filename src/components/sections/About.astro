/**
 * About.astro - Componente para mostrar la secciÃ³n "Sobre mÃ­"
 *
 * CaracterÃ­sticas:
 * - Presenta un resumen profesional con formato estructurado
 * - Extrae los datos directamente del archivo cv.json
 * - Mejora la legibilidad dividiendo el contenido en pÃ¡rrafos
 * - Incluye estilizado especÃ­fico para modo claro y oscuro
 * - Resalta palabras clave y tecnologÃ­as principales
 */
import Section from "../Section.astro";
import { basics } from "@cv";
const { summary } = basics;

// âœ… UX IMPROVEMENT: Dividir el resumen largo en pÃ¡rrafos mÃ¡s legibles
const summaryParagraphs = summary.split(". ").reduce((acc, sentence, index, array) => {
  if (index === 0) {
    // Primer pÃ¡rrafo: introducciÃ³n personal
    acc.push(sentence + ".");
  } else if (index <= 3) {
    // Segundo pÃ¡rrafo: experiencia tÃ©cnica
    if (!acc[1]) acc[1] = "";
    acc[1] += (acc[1] ? " " : "") + sentence + (index < array.length - 1 ? "." : "");
  } else {
    // Tercer pÃ¡rrafo: objetivos y futuro
    if (!acc[2]) acc[2] = "";
    acc[2] += (acc[2] ? " " : "") + sentence + (index < array.length - 1 ? "." : "");
  }
  return acc;
}, [] as string[]);

// âœ… UX IMPROVEMENT: Destacar tecnologÃ­as clave
const highlightKeywords = (text: string) => {
  const keywords = [
    "Java",
    "Spring Framework",
    "Angular",
    "Python",
    "Go",
    "Docker",
    "Kubernetes",
    "Google Cloud",
    "PostgreSQL",
    "inteligencia artificial",
    "CI/CD",
    "Node.js",
  ];

  let highlightedText = text;
  keywords.forEach((keyword) => {
    const regex = new RegExp(`\\b${keyword}\\b`, "gi");
    highlightedText = highlightedText.replace(
      regex,
      `<strong class="text-texto-principal font-semibold">${keyword}</strong>`
    );
  });

  return highlightedText;
};
